{
  "title": "Change return and window control key",
  "rules": [
    {
      "description": "Change return to âŒ˜+Shift if pressed with other keys, to return if pressed alone",
      "manipulators": [
        {
          "from": {
            "key_code": "application",
            "modifiers": {
              "optional": ["shift", "control", "option"]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "modifiers": [
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
