{
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.suggest.localityBonus": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.tabCompletion": "on",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "explorer.autoReveal": "focusNoScroll",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.customLabels.patterns": {
    "**/index.*": "${dirname} .../${dirname(1)}",
    "**/__init__.py": "${dirname}/__init__.py",
  },
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.tree.indent": 18,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.vim": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ipynb_checkpoints": true,
  },
  "terminal.integrated.hideOnStartup": "always",
  "cSpell.customDictionaries": {
    "programming": {
      "name": "programming",
      "path": "~/.config/Code/User/cspell/programming.txt",
      "scope": "user"
    },
    "python": {
      "name": "python-extended",
      "path": "~/.config/Code/User/cspell/python-extended.txt",
      "scope": "user"
    }
  },
  // Theme
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "workbench.colorCustomizations": {
    "tab.activeBorder": "#4586ff",
    "tab.activeBackground": "#4A4A4A",
    "editor.lineHighlightBackground": "#FFFFFF1A",
    // "editorWhitespace.foreground": "#00CC00",
    "editorInlayHint.foreground": "#999999",
    "editorOverviewRuler.addedForeground": "#03bb002e",
    "editorOverviewRuler.deletedForeground": "#00000000",
    "editorOverviewRuler.modifiedForeground": "#053f00",
  },
  "editor.bracketPairColorization.enabled": true,
  "trailing-spaces.regexp": "[ \tã€€]+",
  "trailing-spaces.backgroundColor": "rgba(0,255,0,0.15)",
  "trailing-spaces.borderColor": "rgba(100, 255,100,0.2)",

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
      "other": "off",
      "comments": "off",
      "strings": "off"
    }
  },

  // programming
  "tabnine.experimentalAutoImports": true,
  "tabnine.disableFileRegex": [
    "*.cf.ya?ml",
    "*.md"
  ],
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX"
  ],

  // HTML / JSX
  "auto-close-tag.SublimeText3Mode": true,
  "auto-close-tag.enableAutoCloseSelfClosingTag": true,
  "auto-close-tag.fullMode": true,
  "html.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "emmet.showExpandedAbbreviation": "never",

  // JavaScript / TypeScript
  "eslint.alwaysShowStatus": true,
  "eslint.lintTask.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "editor.inlineSuggest.enabled": true,

  // python
  "jupyter.askForKernelRestart": false,
  // "python.analysis.typeCheckingMode": "basic",
	"jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.runStartupCommands": [
    "%load_ext autoreload",
    "%autoreload 2",
  ],
  "interactiveWindow.alwaysScrollOnNewCell": true,
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],

  // Julia
  "julia.symbolCacheDownload": true,
  "search.exclude": {
    "**/*.ipynb": true,
    "poetry.lock": true
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
  },
  "jupyter.interactiveWindow.creationMode": "perFile",
  "notebook.output.scrolling": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/argoproj/argo-workflows/main/api/jsonschema/schema.json": [
      "**/*workflow*.yaml"
    ]
  },

  "github.copilot.editor.enableAutoCompletions": false,
  "github.copilot.enable": {
    "env": "false"
  },
  "interactiveWindow.executeWithShiftEnter": true,
}
