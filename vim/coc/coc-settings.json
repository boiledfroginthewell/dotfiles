{
	"diagnostic.displayByAle": true,
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	},
	"snippets": {
		"extends": {
			"bash": ["sh"]
		},
		"ultisnips": {
			"directories": [
				"plugged/vim-snippets/UltiSnips",
				"coc/ultisnips"
			]
		}
	},
	"python": {
		"pythonPath": "~/opt/pyenv/shims/python",
		"linting.flake8Enabled": true,
		"linting.mypyEnabled": true
	}
}
