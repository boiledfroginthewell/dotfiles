if filereadable($VIMRUNTIME . "/defaults.vim")
	source $VIMRUNTIME/defaults.vim
endif

set encoding=utf8
scriptencoding utf8

if has("win32")
	if has("gui_running")
		set runtimepath+=$XDG_CONFIG_HOME\vim
	endif
endif


set viminfo+='2000,n$XDG_CACHE_HOME/vim/viminfo

set nu
set display+=lastline
set autochdir
set cursorline
set visualbell
set splitright
set splitbelow
set noswapfile
set showcmd
set completeopt+=longest
set wildmode=list:longest
set ambiwidth=double
set list
set listchars=tab:⋮\ ,trail:⎵,extends:⟩,precedes:⟨,nbsp:⍽
set hlsearch " highlight search word
set infercase " ignore case when completing words
set hidden
autocmd FileType * setlocal formatoptions-=r formatoptions-=o
syntax on

" Default Indent Config
set shiftwidth=4
set tabstop=4
set noexpandtab
set smartindent

set background=$COLOR_MODE ? $COLOR_MODE : "dark"


let mapleader=","

" 通常のエディタにあるショートカット
nnoremap <Space> <c-f>
nnoremap <s-Space> <c-b>
nnoremap <S-CR> O<esc>
nnoremap <CR> o<esc>

" Clipboard
noremap <C-y> "+P
inoremap <C-y> <C-r>+
noremap <C-A-y> "*P

" go to the middle of a line by gm
noremap gm :call cursor(0, virtcol('$')/2)<CR>

" カーソル下の単語を置換する
nnoremap g* :%s/\<<C-r><C-w>\>/
vnoremap g* :s/\<<C-r><C-w>\>/
" 検索ハイライトをクリア
nnoremap <silent> <Esc><Esc> :<C-u>nohlsearch<CR>

source $XDG_CONFIG_HOME/vim/vundle.vim

if has('macunix')
	set guifont=Monaco:h12
endif

