[core]
	autocrlf = input
	pager = delta $DELTA_DEFAULT_OPTION
	quotepath = false

[alias]
	graph = log --all --oneline --graph --pretty='format:%C(green bold)%d%Creset %s  %C(yellow)%an%Creset %C(cyan)@%ad %C(white dim)%h' '--date=format-local:%Y-%m-%d %H:%M'
	st = status

[diff]
  algorithm = histogram

[log]
	follow = true

[init]
	defaultBranch = main

[hub]
	protocol = https

[include]
	path = ./userconfig

