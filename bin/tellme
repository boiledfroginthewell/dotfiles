#!/bin/bash

while getopts 't:h' ARG; do
	case $ARG in
	t)
		timeInterval=$ARG
		;;
	h|\?)
		help
		;;
	esac
done
shift $(( OPTIND - 1 ))

startedAt=$(date +%s)
time while true; do
	if eval "$*" > /dev/null; then
		ellapsed=$(( $(date +%s) - startedAt ))
		notify "âœ…Finished! (time: $(TZ="" date -r $ellapsed +%M:%S))\n $*"
		break
	fi
	sleep "${timeInterval:-5}"
done

