#!/usr/bin/env bash

if [[ "$1" = -i ]]; then
	useIcons=1
fi

# Show absolute path or relative path, which is shorter
compact() {
	while read line; do
		local ABS="$line"
		local REL=${ABS#$PWD/}
		REL=${REL:-.}

		echo ${REL}
	done
}

get_project_root() {
	if [ -n "$1" ]; then
		cd "$1"
	fi
	local PROJECT_ROOT="$(git rev-parse --show-toplevel 2>/dev/null)"
	echo "${PROJECT_ROOT:-$PWD}"
}

iconify() {
	if [ -z "$useIcons" ]; then
		more
		return
	fi

	while read line; do
		emoji="ã€€"
		if [[ $line = *.sh ]]; then
			emoji=ğŸš
		elif [[ $line = *.fish ]]; then
			emoji=ğŸŸ
		elif [[ $line = *.vim ]]; then
			emoji=îŸ…
		elif [[ $line = *.py ]]; then
			emoji=î˜†
		elif [[ $line = *.js ]]; then
			emoji=î˜Œ
		elif [[ $line = *.txt ]] || [[ $line = *.md ]]; then
			emoji=ğŸ“
		elif [[ $line = *.xml ]]; then
			emoji=ïœ­
		elif [[ $line = *.exe ]] || [[ $line = *.ps1 ]]; then
			emoji=îœ
		fi
		echo "$emoji $line"
	done
}

directory="${1}"
if [ -z "$directory" ]; then
	directory=$(get_project_root "${directory}")
fi

# <(< "${XDG_DATA_HOME}/z/data" sort -t '|' -k 2,3 -rn | cut -d '|' -f 1 | sed 's/^/ïŸ™  /') | \

cat \
	<(fd . ${directory}) \
	<(< "${XDG_DATA_HOME}/z/data" sort -t '|' -k 2,3 -rn | cut -d '|' -f 1) | \
compact |\
awk '!x[$0]++' |\
sed "s:$HOME:~:" |\
iconify

